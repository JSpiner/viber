{
  "appId": "io.jspiner.viber",
  "productName": "Viber",
  "directories": {
    "output": "dist"
  },
  "files": [
    "main.js",
    "preload.js",
    "renderer.js",
    "statistics.js",
    "now.js",
    "settings.js",
    "hooks.js",
    "agents.js",
    "sessionLog.js",
    "index.html",
    "*.css",
    "src/**/*.js",
    "resources/**/*",
    "agents-gallery/**/*.md",
    "node_modules/**/*"
  ],
  "extraResources": [
    {
      "from": "agents-gallery",
      "to": "agents-gallery",
      "filter": [
        "**/*.md"
      ]
    }
  ],
  "mac": {
    "icon": "resources/icon.png",
    "category": "public.app-category.developer-tools",
    "hardenedRuntime": true,
    "gatekeeperAssess": true,
    "darkModeSupport": true,
    "entitlements": "entitlements.mac.plist",
    "entitlementsInherit": "entitlements.mac.plist",
    "target": {
      "target": "zip",
      "arch": "universal"
    }
  },
  "win": {
    "icon": "resources/icon.png",
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ]
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Viber"
  },
  "portable": {
    "artifactName": "${productName}-${version}-portable.exe"
  },
  "compression": "maximum",
  "npmRebuild": false,
  "nodeGypRebuild": false,
  "removePackageScripts": true,
  "afterPack": "./after-pack-safe.js",
  "afterSign": "build/notarize.js"
}