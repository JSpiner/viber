{
  "name": "viber-tests",
  "version": "1.0.0",
  "description": "Test suite for Viber application",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "jsdom": "^22.1.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "roots": ["<rootDir>"],
    "testMatch": ["**/*.test.js"],
    "moduleNameMapper": {
      "^../now.js$": "<rootDir>/mocks/now.mock.js"
    }
  }
}